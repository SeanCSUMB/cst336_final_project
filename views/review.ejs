<%- include('partials/header.ejs') %>
        
        <br>
        <section id="listLimiter">
            <div id="reviewProductListing"></div>
        </section>
        <form id="reviewForm" onsubmit="event.preventDefault();">
            <br>
            <h2>Leave a review:</h2>
            <textarea id="itemReview" name="itemReview" rows="4" cols="50"></textarea><br>
            <sub><h3>What would you rate this item out of 5?</h3>
            <div id="ratingLimiter" ></div>
            <select name="rating" id="rating" class="form-control d-flex justify-content-center">
                <option value="5">5/5</option>
                <option value="4">4/5</option>
                <option value="3">3/5</option>
                <option value="2">2/5</option>
                <option value="1">1/5</option>
            </select>
            </div>
            </sub>
            
            <input type='hidden' id='asin' name='asin' value=<%= asin %>>
            <input type='hidden' id='username' name='username' value=<%= username %>>
            <input class="btn btn-secondary" id="reviewSubmit" type="submit" value="Submit">
        </form>
        <section id="reviewscontainer">
            <br>
            <%
                if (Array.isArray(rows)) {
                    rows.forEach(function(row, i) { %>
                
                        <sub>User <strong><%=row["username"] %></strong> says...</sub>
                        <br>
                        <i><strong>"<%=row["reviewText"] %>"</strong></i>
                        <br>
                        <%
                            for (var j = 0; j < row["rating"]; j++) { %>
                                &star;
                        <%  }%>
                        <br>
                
            <% });}%>
            <br>
        </section>
        <input type="hidden" id="reviewsLoader" name='<%= asin %>'>

<%- include('partials/footer.ejs') %>
<script src="js/review.js"></script>